@model PurchaseViewModel
@{ 
    Layout = "~/Views/Purchase/_PurchaseLayout.cshtml";
}

<div period-model="@Model.PeriodInfo" page-action="Purchase"
     period-class="btn" period-class-normal="btn-secondary"
     page-url-category="@Model?.CategoryInfo?.CurrentCategory"
     class="btn-group pull-center m-1"></div>
<br />
@foreach (var item in Model.PurchaseDocuments)
{
    <partial name="PurchaseSummary" model="@item" />
}
<div page-model="@Model?.PagingInfo" page-action="List" page-classes-enabled="true"
     page-class="btn" page-class-normal="btn-secondary"
     page-class-selected="btn-primary"
     page-url-category="@Model?.CategoryInfo?.CurrentCategory"
     page-url-period="@Model?.PeriodInfo?.PeriodType"
     page-url-periodNum="@Model?.PeriodInfo?.CurrentPeriod"
     class="btn-group pull-right m-1">
</div>
