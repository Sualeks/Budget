@model PurchaseDocument

<div class="card card-outline-primary m-1 p-1" asp-action="PurchaseDetail" asp-controller ="Purchase">
    <div class="bg-faded p-1">
        <h4>
            @Model.PurchaseDT.ToString("g")
        </h4>
        <div class="card-text p-1">@Model.TotalCost</div>
    </div>
</div>
 <script>
     $(document).ready(function () {
         $('.card').click(function () {
             var controller = $(this).attr('asp-controller');
             var action = $(this).attr('asp-action');
             location.href = '/'+controller+'/'+action+'/'+@Model.PurchaseDocumentID.ToString()
         });
     });
 </script>